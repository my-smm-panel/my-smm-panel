    <style>
        body { background: #020617; color: white; font-family: 'Inter', sans-serif; }
        .glass { background: rgba(15, 23, 42, 0.9); backdrop-filter: blur(12px); border-radius: 24px; border: 1px solid rgba(255,255,255,0.1); }
        .neo-input { background: #0a0f1d; border: 1px solid #1e293b; color: white; border-radius: 12px; }
        .admin-glow { border: 2px solid #ef4444; box-shadow: 0 0 25px rgba(239, 68, 68, 0.2); }
        .user-card { background: rgba(255,255,255,0.03); border-radius: 16px; padding: 12px; margin-bottom: 8px; border: 1px solid rgba(255,255,255,0.05); }
    </style>
