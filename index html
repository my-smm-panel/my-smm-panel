<body class="p-4">

    <div id="authBox" class="fixed inset-0 bg-[#020617] z-[9999] flex items-center justify-center">
        <div class="glass p-10 text-center w-full max-w-sm">
            <h2 class="text-4xl font-black mb-8 italic text-blue-500">DGPRO</h2>
            <button onclick="handleGoogle()" class="w-full bg-white text-black py-4 rounded-2xl font-bold flex items-center justify-center gap-3">
                <img src="https://www.google.com/favicon.ico" class="w-5"> Login with Google
            </button>
        </div>
    </div>

    <div id="dashboard" class="hidden max-w-md mx-auto space-y-6 pb-24">
        <div class="glass p-6 flex justify-between items-center border-b-2 border-blue-500/20">
            <div class="flex items-center gap-3">
                <img id="uImg" class="w-12 h-12 rounded-full border-2 border-blue-500" src="">
                <div>
                    <h1 id="uName" class="text-xs font-black truncate w-24 italic">Loading...</h1>
                    <button onclick="document.getElementById('addMoneyModal').classList.remove('hidden')" class="text-[9px] bg-blue-600/20 text-blue-400 px-2 py-1 rounded-full border border-blue-500/20 font-black mt-1 uppercase">+ Add Money</button>
                </div>
            </div>
            <div class="text-right">
                <p id="uBal" class="text-2xl font-black text-green-400">â‚¹0.00</p>
                <button onclick="logout()" class="text-[10px] text-red-500 font-bold uppercase">Sign Out</button>
            </div>
        </div>

        <div class="glass p-6 space-y-4">
            <select id="catSel" onchange="loadSvcs()" class="w-full p-4 neo-input text-xs font-bold"></select>
            <select id="svcSel" onchange="calcPrice()" class="w-full p-4 neo-input text-xs font-bold"></select>
            <input id="orderLink" type="text" placeholder="Post Link" class="w-full p-4 neo-input text-xs font-bold">
            <input id="orderQty" oninput="calcPrice()" type="number" placeholder="Quantity" class="w-full p-4 neo-input text-xs font-bold">
            <div class="text-center p-2 bg-blue-500/10 rounded-xl">
                <span id="totalPrice" class="text-lg font-black text-blue-400">â‚¹0.00</span>
            </div>
            <button onclick="placeOrder()" class="w-full bg-blue-600 py-4 rounded-2xl font-black uppercase">Place Order</button>
        </div>

        <div id="adminPanel" class="hidden space-y-6">
            <div class="glass border-2 border-blue-500/20 p-6 space-y-4">
                <h2 class="text-blue-500 font-black text-center text-[10px] uppercase tracking-widest">Global User Database</h2>
                <div id="userList" class="max-h-96 overflow-y-auto space-y-2 pr-2">
                    <p class="text-center text-[10px] text-slate-500 italic">Fetching Users...</p>
                </div>
            </div>

            <div class="glass admin-glow p-6 space-y-4">
                <h2 class="text-red-500 font-black text-center text-[10px] uppercase">Gift Card Master</h2>
                <input id="giftCode" type="text" placeholder="CODE" class="w-full p-3 neo-input text-xs font-bold uppercase">
                <input id="giftVal" type="number" placeholder="Value (â‚¹)" class="w-full p-3 neo-input text-xs font-bold">
                <button onclick="adminGenGift()" class="w-full bg-red-600 py-3 rounded-xl font-black text-xs uppercase">Generate Gift</button>
            </div>
        </div>
    </div>

    <div id="addMoneyModal" class="hidden fixed inset-0 bg-black/95 z-[10000] flex items-center justify-center p-6">
        <div class="glass p-8 w-full max-w-sm text-center space-y-5">
            <h2 class="text-xl font-black">REDEEM GIFT</h2>
            <input id="redeemCode" type="text" placeholder="ENTER CODE" class="w-full p-4 neo-input text-center font-black text-xl uppercase text-blue-400">
            <button onclick="redeemGift()" class="w-full bg-blue-600 py-4 rounded-xl font-black">REDEEM</button>
            <button onclick="document.getElementById('addMoneyModal').classList.add('hidden')" class="text-slate-500 text-xs font-bold">CLOSE</button>
        </div>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getAuth, signInWithPopup, GoogleAuthProvider, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
        import { getDatabase, ref, onValue, update, increment, set, get } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-database.js";

        const firebaseConfig = {
            apiKey: "AIzaSyCbOQZjrqbfr6r23MFNlDZavyB9AChK_XM",
            authDomain: "smspanel-76488.firebaseapp.com",
            databaseURL: "https://smspanel-76488-default-rtdb.firebaseio.com",
            projectId: "smspanel-76488",
            storageBucket: "smspanel-76488.firebasestorage.app",
            messagingSenderId: "478520093402",
            appId: "1:478520093402:web:bf976787e46af3017b13e3"
        };

        const app = initializeApp(firebaseConfig);
        const auth = getAuth();
        const db = getDatabase(app);
        const provider = new GoogleAuthProvider();
        const BACKEND = "https://dg-backend-jhqa.onrender.com";

        // âœ… UPDATED ADMIN UID
        const MASTER_ADMIN_UID = "cmEr126Ej8YuXZuPV4Pm88tR9Il2";

        let uRef, myBal = 0, userUID = "", allSvcs = [];

        onAuthStateChanged(auth, async (user) => {
            if (user) {
                userUID = user.uid;
                document.getElementById('uName').innerText = user.displayName;
                document.getElementById('uImg').src = user.photoURL;
                document.getElementById('authBox').classList.add('hidden');
                document.getElementById('dashboard').classList.remove('hidden');
                
                // ðŸ”’ Admin Check
                if(userUID === MASTER_ADMIN_UID) {
                    document.getElementById('adminPanel').classList.remove('hidden');
                    loadUserDatabase();
                }

                uRef = ref(db, 'users/' + user.uid);
                onValue(uRef, (s) => {
                    myBal = s.val() ? s.val().balance : 0;
                    document.getElementById('uBal').innerText = "â‚¹" + myBal.toFixed(2);
                    if(!s.val()) set(uRef, { balance: 0, email: user.email, name: user.displayName, photo: user.photoURL });
                });

                const r = await fetch(`${BACKEND}/services`);
                allSvcs = await r.json();
                const cats = [...new Set(allSvcs.map(s => s.category))];
                document.getElementById('catSel').innerHTML = cats.map(c => `<option value="${c}">${c}</option>`).join('');
                loadSvcs();
            }
        });

        // ðŸ‘¥ User Management Logic (Admin Only)
        window.loadUserDatabase = () => {
            const usersRef = ref(db, 'users');
            onValue(usersRef, (snapshot) => {
                const data = snapshot.val();
                let html = "";
                for (let id in data) {
                    const user = data[id];
                    html += `
                        <div class="user-card">
                            <div class="flex justify-between items-center mb-2">
                                <div class="truncate pr-2">
                                    <p class="text-[10px] font-black text-blue-400">${user.name || 'Unknown'}</p>
                                    <p class="text-[8px] text-slate-500">${user.email}</p>
                                </div>
                                <div class="text-right">
                                    <p class="text-xs font-bold text-green-400">â‚¹${(user.balance || 0).toFixed(2)}</p>
                                </div>
                            </div>
                            <div class="flex gap-2">
                                <input id="amt-${id}" type="number" placeholder="Amt" class="w-full p-2 text-[10px] neo-input">
                                <button onclick="modBal('${id}', 1)" class="bg-green-600 px-3 rounded-lg text-xs">+</button>
                                <button onclick="modBal('${id}', -1)" class="bg-red-600 px-3 rounded-lg text-xs">-</button>
                            </div>
                        </div>
                    `;
                }
                document.getElementById('userList').innerHTML = html;
            });
        };

        window.modBal = async (targetId, factor) => {
            const val = parseFloat(document.getElementById(`amt-${targetId}`).value);
            if(!val || val <= 0) return alert("Invalid Amount");
            await update(ref(db, `users/${targetId}`), { balance: increment(val * factor) });
            alert("Updated!");
        };

        window.loadSvcs = () => {
            const cat = document.getElementById('catSel').value;
            const filtered = allSvcs.filter(s => s.category === cat);
            document.getElementById('svcSel').innerHTML = filtered.map(s => `<option value="${s.rate}" data-id="${s.service}">${s.name} - â‚¹${(s.rate*1.25).toFixed(2)}</option>`).join('');
            calcPrice();
        };

        window.calcPrice = () => {
            const rate = parseFloat(document.getElementById('svcSel').value);
            const qty = parseInt(document.getElementById('orderQty').value) || 0;
            const total = (rate * 1.25 / 1000) * qty;
            document.getElementById('totalPrice').innerText = "â‚¹" + total.toFixed(2);
        };

        window.adminGenGift = async () => {
            if(userUID !== MASTER_ADMIN_UID) return;
            const code = document.getElementById('giftCode').value.toUpperCase().trim();
            const val = parseFloat(document.getElementById('giftVal').value);
            if(!code || !val) return alert("Fill All Fields!");
            await set(ref(db, `gifts/${code}`), { amount: val, active: true });
            alert("Card Created!");
        };

        window.redeemGift = async () => {
            const code = document.getElementById('redeemCode').value.toUpperCase().trim();
            const giftRef = ref(db, `gifts/${code}`);
            const snap = await get(giftRef);
            if (snap.exists() && snap.val().active) {
                await update(uRef, { balance: increment(snap.val().amount) });
                await update(giftRef, { active: false, redeemedBy: userUID });
                alert("Balance Added!");
                document.getElementById('addMoneyModal').classList.add('hidden');
            } else { alert("Invalid Code!"); }
        };

        window.placeOrder = async () => {
            const finalPrice = parseFloat(document.getElementById('totalPrice').innerText.replace('â‚¹',''));
            if(myBal < finalPrice) return alert("Low Balance!");
            const sid = document.getElementById('svcSel').options[document.getElementById('svcSel').selectedIndex].getAttribute('data-id');
            const res = await fetch(`${BACKEND}/place-order`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    service: sid, link: document.getElementById('orderLink').value,
                    quantity: document.getElementById('orderQty').value,
                    token: "DGPRO_ULTRA_SECURE_X99"
                })
            });
            const data = await res.json();
            if(data.success) {
                await update(uRef, { balance: increment(-finalPrice) });
                alert("Order Placed!");
            }
        };

        window.handleGoogle = () => signInWithPopup(auth, provider);
        window.logout = () => signOut(auth).then(() => location.reload());
    </script>
</body>
</html>
